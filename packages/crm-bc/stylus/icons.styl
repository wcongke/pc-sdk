@font-face {
  font-family: 'crm';  /* project id 847196 */
  src: url('//at.alicdn.com/t/font_847196_pirpnldb878.eot');
  src: url('//at.alicdn.com/t/font_847196_pirpnldb878.eot?#iefix') format('embedded-opentype'),
  url('//at.alicdn.com/t/font_847196_pirpnldb878.woff') format('woff'),
  url('//at.alicdn.com/t/font_847196_pirpnldb878.ttf') format('truetype'),
  url('//at.alicdn.com/t/font_847196_pirpnldb878.svg#crm') format('svg');
}

.crm-icon
  direction: ltr;
  display: inline-block;
  font: normal normal normal $fs-xxxl "crm";
  font-size: inherit;
  line-height: inherit;
  letter-spacing: normal;
  text-rendering: auto;
  text-transform: none;
  white-space: nowrap;
  overflow-wrap: normal;
  -webkit-font-feature-settings: "liga";
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;

  &::before
    font-size: $fs-xxxl

  &--qq::before
    content "\e6db"

  &--wechat::before
    content "\e694"
  
  &--weibo::before
    content: "\e61c"


