/**
 * 字体大小
 */
$fs-xxxl = 24px
$fs-xxl = 20px
$fs-xl = 18px
$fs-l = 16px
$fs-m = 14px
$fs-s = 12px

.ma-text
  /**
   * 字体大小
   */
  &--fs-xxl
    font-size $fs-xxl
  
  &--fs-xl
    font-size $fs-xl
  
  &--fs-l
    font-size $fs-l
  
  &--fs-m
    font-size $fs-m
  
  &-fs-s
    font-size $fs-s
  
  /**
  * 不换行
  */
  &--ellipsis
    overflow hidden
    text-overflow ellipsis
    white-space nowrap

  &--break-word
    word-break break-all
    word-wrap break-word
    overflow-wrap break-word

  &--ellipsis--2
    overflow hidden
    text-overflow ellipsis
    display -webkit-box
    -webkit-box-orient vertical
    word-break break-all
    -webkit-line-clamp 2


.code
  word-break break-all
  border 1px solid #e6e6e6
  padding 6px 10px
  border-radius 3px
  color #808080
  background-color #f8f8f8

hr
  border 0
  border-top 1px solid #ddd
